@model Model_Zupree.CategoryViewModel
@using (Html.BeginForm("Edit", "Category", new { area = "User" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="col-md-12">
        @Html.HiddenFor(model => model.CategoryId)
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group mb-3">
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-update">Update</button>
                <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
}
